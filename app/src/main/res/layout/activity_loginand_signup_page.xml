<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginandSignupPage">


    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="736dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="230dp"
            android:layout_height="230dp"
            android:layout_gravity="center"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/welcomescreen" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/berkshire_swash"
            android:textAlignment="center"
            android:text="Welcome to App"
            android:textColor="@color/app"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/continueviaphonebuttonnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="#EF9B20"
                android:background="@drawable/loginsignupbutton"
                android:text="Continue via Phone Number"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:icon="@drawable/phone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/continueviagooglebuttonnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:backgroundTint="#EF9B20"
                android:background="@drawable/loginsignupbutton"
                android:text="Continue via Google"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:icon="@drawable/google" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/continueviasigninbuttonnew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:backgroundTint="#EF9B20"
                android:background="@drawable/loginsignupbutton"
                android:text="Continue via Email"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:icon="@drawable/baseline_email_24" />





        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>