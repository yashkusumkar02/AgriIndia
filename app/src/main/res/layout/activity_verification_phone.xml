<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignUp.verificationPhone">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app">

            <ImageView
                android:id="@+id/topPhoto"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/otp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"/>

            <TextView
                android:id="@+id/otpTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verification Code"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:layout_below="@+id/topPhoto"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/anton"/>

            <TextView
                android:id="@+id/slogan"
                android:layout_below="@+id/otpTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="We have sent the verification code on your mobile number"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:fontFamily="@font/antic"
                android:layout_marginTop="5dp"/>


            <com.chaos.view.PinView
                android:layout_below="@+id/slogan"
                android:id="@+id/pinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:itemCount="6"
                app:itemWidth="50dp"
                app:itemHeight="50dp"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                app:lineColor="@color/green"
                android:itemBackground="#DCFFEC"
                style="@style/PinWidget.PinView"
                android:layout_marginTop="30dp"
                app:itemRadius="10dp"
                app:itemSpacing="5dp" />

            <android.widget.Button
                android:id="@+id/verificationBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pinView"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="70dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/round_button"
                android:text="SUBMIT"
                android:textColor="@color/black2"
                android:textSize="20dp"
                android:fontFamily="@font/antic"
                android:textStyle="bold"
                android:backgroundTint="@color/white"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>